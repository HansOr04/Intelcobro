# .env.example
# Configuración del servidor
NODE_ENV=development
PORT=5000
HOST=localhost

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Resend Email Service
RESEND_API_KEY=re_your-resend-api-key-here
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_TO_EMAIL=admin@yourdomain.com

# ElevenLabs Text-to-Speech
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Database (para futuras expansiones)
# DATABASE_URL=postgresql://user:password@localhost:5432/intelcobro

# API Versioning
API_VERSION=v1

# Health Check
HEALTH_CHECK_ENABLED=true

# Chat Configuration
DEFAULT_CHAT_LANGUAGE=es
MAX_MESSAGE_LENGTH=1000
CHAT_HISTORY_LIMIT=50

# Wheel Configuration
WHEEL_SPIN_COOLDOWN=300000
MIN_DISCOUNT_PERCENTAGE=5
MAX_DISCOUNT_PERCENTAGE=50